    <!--JavaScript -->
    <script>
        function showCultureSection(event) {
            event.preventDefault(); 

            const cultureSection = document.getElementById('culture-section');
            const sections = document.querySelectorAll('section');

            
            sections.forEach((section) => {
                section.classList.add('hidden');
            });

            // Show only the culture section
            cultureSection.classList.remove('hidden');
            window.scrollTo(0, cultureSection.offsetTop);
        }

        function navigateToPage(page) {
            localStorage.setItem('returnToCulture', true);
            window.location.href = page; // Redirect to another page
        }

        function showFestivalDetails() {
            const detailsSection = document.getElementById('festival-details');
            detailsSection.classList.remove('hidden'); 
            window.scrollTo(0, detailsSection.offsetTop); 
        }

        window.onload = function () {
            const cultureSection = document.getElementById('culture-section');
            const returnToCulture = localStorage.getItem('returnToCulture');

        if (returnToCulture) {
            // If the user is returning to the culture section
            const sections = document.querySelectorAll('section');
            sections.forEach((section) => {
                section.classList.add('hidden');
            });
    
            // Show the culture section
            cultureSection.classList.remove('hidden');
    
            // Scroll to the culture section
            window.scrollTo(0, cultureSection.offsetTop);
        }   
        };    


    </script>

